{
  "name": "@canonical/react-components",
  "version": "0.3.0",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "author": "Huw Wilkins <huw.wilkins@canonical.com>",
  "license": "LGPL-3.0",
  "files": [
    "dist/**/*.js",
    "dist/**/*.scss",
    "!dist/**/*.test.js",
    "!dist/testing",
    "!dist/setupTests.js"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:canonical-web-and-design/react-components.git"
  },
  "bugs": {
    "url": "https://github.com/canonical-web-and-design/react-components/issues"
  },
  "homepage": "/react-components/",
  "devDependencies": {
    "@babel/cli": "7.7.7",
    "@storybook/addon-docs": "5.2.8",
    "@storybook/addon-knobs": "5.2.8",
    "@storybook/react": "5.2.8",
    "enzyme": "3.10.0",
    "enzyme-adapter-react-16": "1.15.2",
    "enzyme-to-json": "3.4.3",
    "node-sass": "4.13.0",
    "npm-package-json-lint": "4.5.0",
    "react-scripts": "3.2.0"
  },
  "dependencies": {
    "classnames": "2.2.6",
    "prop-types": "15.7.2",
    "vanilla-framework": "2.4.1"
  },
  "peerDependencies": {
    "react": "16.12.0",
    "react-dom": "16.12.0"
  },
  "scripts": {
    "build": "rm -rf dist && NODE_ENV=production babel src --out-dir dist --copy-files",
    "build-docs": "build-storybook -c .storybook -o docs",
    "clean": "rm -rf node_modules dist .out",
    "docs": "start-storybook --port ${PORT}",
    "eject": "react-scripts eject",
    "lint-js": "eslint src",
    "lint-package-json": "npmPkgJsonLint .",
    "lint": "yarn lint-package-json && yarn lint-js",
    "prepublishOnly": "yarn clean && yarn install && yarn build",
    "serve": "yarn docs",
    "test": "react-scripts test"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  },
  "npmpackagejsonlint": {
    "rules": {
      "prefer-absolute-version-dependencies": "error",
      "prefer-absolute-version-devDependencies": "error",
      "prefer-alphabetical-dependencies": "error",
      "prefer-alphabetical-devDependencies": "error"
    }
  }
}
